@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

<div class="container mt-5 text-center" style="max-width: 600px;">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-5">
            <h2 class="fw-bold text-danger mb-3">Cerrar sesión</h2>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <p class="mb-4 text-muted">¿Está seguro que desea cerrar la sesión actual?</p>

                <form asp-area="Identity"
                      asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                      method="post"
                      class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger px-4 py-2 fw-semibold shadow-sm">
                        Cerrar sesión
                    </button>
                </form>
            }
            else
            {
                <h5 class="text-success fw-semibold mt-2">Ha cerrado sesión correctamente.</h5>
                <p class="text-muted mt-3">Gracias por utilizar el Sistema de Gestión de Créditos (SGC).</p>
                <a href="/" class="btn btn-outline-primary mt-3 px-4">Volver al inicio</a>
            }
        </div>
    </div>
</div>
