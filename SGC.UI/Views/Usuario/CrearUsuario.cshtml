@model SGC.Abstracciones.Modelos.ModelosDTO.UsuarioDTO

<div class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" id="modalCrearUsuario" tabindex="-1" aria-labelledby="modalCrearUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg rounded-4">

            <!-- Header -->
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title fw-bold" id="modalCrearUsuarioLabel">
                    <i class="bi bi-person-plus me-2"></i> Crear Nuevo Usuario
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <!-- Body -->
            <div class="modal-body px-4 py-3">
                <form asp-action="RegistrarUsuario" id="formCrearUsuario">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 d-none"></div>

                    <!-- Sección: Identificación -->
                    <fieldset class="border rounded-3 p-3 mb-4">
                        <legend class="float-none w-auto px-2 text-primary fw-semibold">
                            <i class="bi bi-person-vcard me-1"></i> Identificación
                        </legend>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Identificacion" class="form-label fw-semibold"></label>
                                <input asp-for="Identificacion" class="form-control" placeholder="Ingrese identificación..." />
                                <span asp-validation-for="Identificacion" class="text-danger small"></span>
                            </div>
                        </div>
                    </fieldset>

                    <!-- Sección: Datos personales -->
                    <fieldset class="border rounded-3 p-3 mb-4">
                        <legend class="float-none w-auto px-2 text-primary fw-semibold">
                            <i class="bi bi-person-lines-fill me-1"></i> Datos Personales
                        </legend>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label fw-semibold"></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre..." />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PrimerApellido" class="form-label fw-semibold"></label>
                                <input asp-for="PrimerApellido" class="form-control" placeholder="Primer apellido..." />
                                <span asp-validation-for="PrimerApellido" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SegundoApellido" class="form-label fw-semibold"></label>
                                <input asp-for="SegundoApellido" class="form-control" placeholder="Segundo apellido..." />
                                <span asp-validation-for="SegundoApellido" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="FechaNacimiento" class="form-label fw-semibold"></label>
                                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                            </div>
                        </div>
                    </fieldset>

                    <!-- Sección: Credenciales -->
                    <fieldset class="border rounded-3 p-3 mb-4">
                        <legend class="float-none w-auto px-2 text-primary fw-semibold">
                            <i class="bi bi-lock me-1"></i> Credenciales
                        </legend>

                        <div class="row g-3">
                            <div class="col">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>

                                <label asp-for="Telefono" class="form-label fw-semibold"></label>
                                <input asp-for="Telefono" class="form-control" placeholder="Ej: 8888-8888" />
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Roles" class="form-label fw-semibold">
                                    Roles (Ctrl + click selección múltiple)
                                </label>
                                <select multiple asp-for="Roles" class="form-select" id="selectRoles"></select>
                                <span asp-validation-for="Roles" class="text-danger small"></span>
                            </div>
                        </div>
                    </fieldset>



                    <!-- Footer con botones -->
                    <div class="modal-footer border-0 pt-3">
                        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-1"></i> Cerrar
                        </button>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-check-circle me-1"></i> Crear Usuario
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
