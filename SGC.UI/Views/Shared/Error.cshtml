@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger fw-bold">⚠️ Ocurrió un Error</h1>
    <p class="lead text-muted mt-3">
        Lamentablemente ha ocurrido un error inesperado mientras se procesaba su solicitud.
        Por favor, inténtelo nuevamente más tarde.
    </p>

    @if (Model.ShowRequestId)
    {
        <div class="alert alert-light mt-4 shadow-sm" role="alert" style="max-width: 600px; margin: 0 auto;">
            <strong>ID de Solicitud:</strong>
            <code>@Model.RequestId</code>
        </div>
    }

    <div class="mt-5">
        <a href="/" class="btn btn-primary px-4 py-2 rounded-pill shadow-sm">
            Volver al Inicio
        </a>
    </div>

   
</div>

